<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_gravity="start"
    android:id="@+id/drawer"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/background_mypage_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="50dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/drawer_profile"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/drawer_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default"
                        android:text="로그인기능 준비중"
                        android:textColor="@color/White"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/lin_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/padding_default"
                    android:text="공지사항"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_more" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/padding_default"
                    android:text="FAQ"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_more" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@color/DarkGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <ImageButton
                    android:id="@+id/btn_request_partner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:background="@drawable/button_banner_partner" />

                <ImageButton
                    android:id="@+id/btn_invite_kakao"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_invite_kakao" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/callcenters" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>