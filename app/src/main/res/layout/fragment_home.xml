<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_small"
            android:orientation="horizontal"
            android:padding="@dimen/padding_default">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_gravity="center|start"
                android:background="@drawable/gp1"/>

            <TextView
                android:text="지역별 TOP 4"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:layout_height="match_parent" />

            <Spinner
                android:background="@color/background"
                android:id="@+id/spn_top"
                android:layout_width="100dp"
                android:layout_height="30dp"></Spinner>

        </LinearLayout>

        <GridView
            android:id="@+id/grv_count_4"
            android:padding="@dimen/padding_default"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:listSelector="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ebebebeb"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal"
                android:padding="@dimen/padding_default">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_gravity="center|start"
                    android:background="@drawable/gp2"/>

                <TextView
                    android:text="씨서바 추천"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/tabColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="2dp"
                    android:background="#ebebebeb"
                    android:src="@drawable/rsz_btn_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_tab"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"/>

                </HorizontalScrollView>

                <ImageView
                    android:layout_margin="2dp"
                    android:src="@drawable/btn_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>


            <ListView
                android:dividerHeight="@dimen/margin_default"
                android:divider="@color/background"
                android:padding="@dimen/padding_medium"
                android:id="@+id/lv_items"
                android:layout_width="match_parent"
                android:layout_height="300dp"></ListView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>