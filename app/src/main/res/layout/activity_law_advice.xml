<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_law_advice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eastblue.cisuba.Activity.LawAdviceActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:text="생활법률서비스 안내"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/btn_back"
            android:background="@drawable/tab_close"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_gravity="end|center"
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_type_0"
                android:text="형사"
                android:textColor="@color/lunch_text"
                android:textSize="@dimen/text_size_small"
                android:background="@color/White"
                android:padding="@dimen/padding_default"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_type_1"
                android:text="민사"
                android:textSize="@dimen/text_size_small"
                android:background="@color/White"
                android:textColor="@color/Black"
                android:padding="@dimen/padding_default"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_type_2"
                android:text="기사(상속,이혼)"
                android:textSize="@dimen/text_size_small"
                android:background="@color/White"
                android:textColor="@color/Black"
                android:padding="@dimen/padding_default"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/LightGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_type_3"
                android:text="교통/손해"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_small"
                android:background="@color/White"
                android:padding="@dimen/padding_default"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_type_4"
                android:text="개인회생/파산"
                android:textSize="@dimen/text_size_small"
                android:background="@color/White"
                android:textColor="@color/Black"
                android:padding="@dimen/padding_default"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:background="@color/White"
                android:padding="@dimen/padding_default"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="1px"
            android:background="@color/LightGrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ebebebeb"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/gp_man"/>

                <TextView
                    android:id="@+id/tv_info"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:text="씨서바 [형사]분야 무료 상담하기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/padding_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_marginRight="@dimen/margin_default"
                    android:hint="성함"
                    android:textSize="@dimen/text_size_default"
                    android:background="@drawable/edittext_default_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:hint="연락처"
                    android:textSize="@dimen/text_size_default"
                    android:background="@drawable/edittext_default_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_content"
                android:gravity="start"
                android:textSize="@dimen/text_size_default"
                android:hint="법률 관련 상담 내용을 입력해주세요"
                android:background="@drawable/edittext_default_radius"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                android:padding="@dimen/padding_default"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_call"
                android:layout_marginRight="@dimen/margin_default"
                android:background="@color/product_color"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:text="담당자에게\n전화하기"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_send"
                android:text="보내기"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:background="#4b6aa1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
