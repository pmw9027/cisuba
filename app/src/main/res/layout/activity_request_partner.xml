<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_partner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eastblue.cisuba.Activity.RequestPartnerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_image"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LightGrey"
                android:padding="@dimen/padding_medium"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_partner_name"
                    android:textSize="@dimen/text_size_default"
                    android:hint="업소명"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_default_radius"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_name"
                        android:textSize="@dimen/text_size_default"
                        android:hint="성함"
                        android:layout_marginRight="@dimen/margin_default"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_default_radius"/>

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:textSize="@dimen/text_size_default"
                        android:hint="연락처"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_default_radius"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_email_address"
                    android:textSize="@dimen/text_size_default"
                    android:hint="이메일 주소"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_default_radius"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:text="제휴 문의하기"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CadetBlue"/>

</LinearLayout>
